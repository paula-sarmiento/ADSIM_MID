<?xml version="0.1" encoding="utf-8"?><!-- -*- coding: utf-8; mode: SGML -*- -->
  <container n="Units_Dimensions" pn="Units and dimensions" icon="icon_units.png" help="Setup unit system, problem dimensions, and gravity acceleration."> 
    <container n="units" pn="Units" icon="icon_units_2.png" help="Just for reference. The user must ensure the use of consistent units throughout the model definition.">
      <value n='units_mesh' pn='Geometry unit' values="m,cm,ft,in" v="m" editable="0"/>
      <value n='units_mass' pn='Mass unit' values="gr,kg,lb" v="gr" editable="0"/>
      <value n='units_pressure' pn='Pressure unit' values="kPa,Pa,psf,psi,atm" v="kPa" editable="0"/>
      <value n='units_temperature' pn='Temperature unit' values="K,C,F" v="K" editable="0"/>
      <value n='units_time' pn='Time unit' values="s,min,hr" v="s" editable="0"/>

    </container>

    <!-- Add container to define gravity vector in 2D -->
    <container n="gravity" pn="Gravity vector" icon="icon_gravity.png" help="Define gravity vector components for 2D problems.">
      <value n="gravity_acceleration" pn="Gravity magnitude [L/T^2]" v="9.81"/>
      <value n="gravity_x" pn="Gravity x component" v="0.0"/>
      <value n="gravity_y" pn="Gravity y component" v="-1.0"/>
    </container>

</container>
